<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".report.Report_Content">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/rtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="weekly report"
                android:textSize="30dp"
                app:layout_constraintBottom_toTopOf="@id/rterm"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/rterm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="임시지정텍스트"
                android:textColor="#CCCCCC"
                android:textSize="20dp"
                app:layout_constraintBottom_toTopOf="@id/moneyt"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rtitle" />

            <TextView
                android:id="@+id/moneyt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이번 주 사용하신 금액은"
                android:textSize="20dp"
                app:layout_constraintBottom_toTopOf="@id/moneyc"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rterm" />

            <TextView
                android:id="@+id/moneyc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="126,500"
                android:textColor="#3F51B5"
                android:textSize="35dp"
                app:layout_constraintBottom_toTopOf="@id/moneyimage"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/moneycs"
                app:layout_constraintTop_toBottomOf="@id/moneyt" />

            <TextView
                android:id="@+id/moneycs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(지난주대비)"
                android:textColor="#B7B8BC"
                android:textSize="25dp"
                app:layout_constraintBottom_toTopOf="@id/moneyimage"
                app:layout_constraintLeft_toRightOf="@id/moneyc"
                app:layout_constraintRight_toLeftOf="@id/moneyct"
                app:layout_constraintTop_toBottomOf="@id/moneyt" />

            <TextView
                android:id="@+id/moneyct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="입니다"
                android:textSize="25dp"
                app:layout_constraintBottom_toTopOf="@id/moneyimage"
                app:layout_constraintLeft_toRightOf="@id/moneycs"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/moneyt" />
            <ImageView
                android:id="@+id/moneyimage"
                android:layout_width="wrap_content"
                android:layout_height="250dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/temp"
                app:layout_constraintBottom_toTopOf="@id/catt"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/moneyct"
                />

            <TextView
                android:id="@+id/catt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="가장 많이 방문한 곳은"
                android:textSize="20dp"
                app:layout_constraintBottom_toTopOf="@id/catc"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/moneyimage" />
            <TextView
                android:id="@+id/catc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="카페/디저트"
                android:textColor="@color/purple_200"
                android:textSize="35dp"
                app:layout_constraintBottom_toTopOf="@id/catimage"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/catcs"
                app:layout_constraintTop_toBottomOf="@id/moneyt" />
            <TextView
                android:id="@+id/catcs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="입니다"
                android:textSize="25dp"
                app:layout_constraintBottom_toTopOf="@id/catimage"
                app:layout_constraintLeft_toRightOf="@id/catc"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/moneyt"
                />
            <ImageView
                android:id="@+id/catimage"
                android:layout_width="wrap_content"
                android:layout_height="250dp"
                android:background="@drawable/temp"
                app:layout_constraintBottom_toTopOf="@id/caticon"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/moneyct"
                />
            <ImageView
                android:id="@+id/caticon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/oval"
                app:layout_constraintTop_toBottomOf="@id/catimage"
                app:layout_constraintBottom_toTopOf="@id/weekt"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/catic"
                />
            <TextView
                android:id="@+id/catic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="81,200"
                android:textSize="25dp"
                app:layout_constraintTop_toBottomOf="@id/catimage"
                app:layout_constraintBottom_toTopOf="@id/weekt"
                app:layout_constraintLeft_toRightOf="@id/caticon"
                app:layout_constraintRight_toRightOf="parent"
                />
            <TextView
                android:id="@+id/weekt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="가장 많이 지출한 시간은"
                android:textSize="20dp"
                app:layout_constraintTop_toBottomOf="@id/caticon"
                app:layout_constraintBottom_toTopOf="@id/weekc"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                />
            <TextView
                android:id="@+id/weekc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="금요일 21시"
                android:textColor="#3F51B5"
                android:textSize="35dp"
                app:layout_constraintTop_toBottomOf="@id/weekt"
                app:layout_constraintBottom_toTopOf="@id/weekimage"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/weekcs"
                />
            <TextView
                android:id="@+id/weekcs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="입니다"
                android:textSize="25dp"
                app:layout_constraintTop_toBottomOf="@id/weekt"
                app:layout_constraintBottom_toTopOf="@id/weekimage"
                app:layout_constraintLeft_toRightOf="@id/weekc"
                app:layout_constraintRight_toRightOf="parent"
                />
            <ImageView
                android:id="@+id/weekimage"
                android:layout_width="wrap_content"
                android:layout_height="250dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/temp"
                app:layout_constraintTop_toBottomOf="@id/weekcs"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>