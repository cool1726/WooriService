<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:behavior_hideable="true"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="배달 소비가 잦은 당신은"
        android:textSize="20dp"
        android:id="@+id/user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/asdgn_b"
        android:textColor="@color/mild_blue"
        android:layout_marginTop="40dp"
        app:layout_constraintBottom_toTopOf="@+id/report_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <LinearLayout
        android:id="@+id/report_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/report_title2"
        app:layout_constraintTop_toBottomOf="@+id/user"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintVertical_chainStyle="packed">

        <TextView
            android:text="카드의 정석 POINT 주거래"
            android:textSize="22dp"
            android:id="@+id/card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/asdgn_b"
            android:textColor="@color/black"
            android:layout_marginRight="6dp"
            app:layout_constraintHorizontal_bias="0.1"/>
        <TextView
            android:text="로 바꾸면"
            android:textSize="16dp"
            android:id="@+id/card2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/asdgn_b"
            android:textColor="@color/light_gray"
            android:layout_marginRight="10dp"
            app:layout_constraintHorizontal_bias="0.1"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/report_title2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/linear1"
        app:layout_constraintTop_toBottomOf="@+id/report_title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="10dp"
        app:layout_constraintVertical_chainStyle="packed">

        <TextView
            android:text="연 3만원"
            android:textSize="22dp"
            android:id="@+id/money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/asdgn_b"
            android:textColor="@color/black"
            android:layout_marginRight="10dp"
            app:layout_constraintHorizontal_bias="0.1"/>
        <TextView
            android:text="을 아낄 수 있어요!"
            android:textSize="22dp"
            android:id="@+id/money2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/asdgn_b"
            android:textColor="@color/light_gray"
            android:layout_marginRight="10dp"
            app:layout_constraintHorizontal_bias="0.1"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linear1"
        android:layout_marginTop="50dp"
        android:background="@drawable/boarder_layout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/report_title2"
        app:layout_constraintVertical_chainStyle="packed"
        android:orientation="vertical">
        <ImageView
            android:layout_gravity="center"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/card"
            />
        <TextView
            android:layout_gravity="center"
            android:text="우리 주거래고객을 위한 혜택"
            android:textSize="14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/asdgn_m"
            android:textColor="@color/light_gray"
            android:layout_marginBottom="10dp"
            app:layout_constraintHorizontal_bias="0.1"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/line"
            />
        <LinearLayout
            android:id="@+id/linear2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp">
            <TextView
                android:id="@+id/ctbal_label"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="연 할인"
                android:textSize="15dp"
                android:textColor="@color/dark_gray"
                android:fontFamily="@font/asdgn_m"/>
            <TextView
                android:id="@+id/ctbal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="11,000원"
                android:textSize="15dp"
                android:textColor="@color/dark_gray"
                android:fontFamily="@font/asdgn_m"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linear3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">
            <TextView
                android:id="@+id/payavlam_label"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="연 적립"
                android:textSize="15dp"
                android:textColor="@color/dark_gray"
                android:fontFamily="@font/asdgn_m"/>
            <TextView
                android:id="@+id/payavlam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0점"
                android:textSize="15dp"
                android:textColor="@color/dark_gray"
                android:fontFamily="@font/asdgn_m"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linear4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="25dp">
            <TextView
                android:id="@+id/newdt_label"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="연회비 차감"
                android:textSize="15dp"
                android:textColor="@color/dark_gray"
                android:fontFamily="@font/asdgn_m"/>
            <TextView
                android:id="@+id/newdt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-0원"
                android:textSize="15dp"
                android:textColor="@color/dark_gray"
                android:fontFamily="@font/asdgn_m"
                android:layout_weight="1"/>
        </LinearLayout>

        <Button
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="카드 신청하기"
            android:background="@color/mild_blue"
            android:backgroundTint="@color/mild_blue"
            android:layout_marginBottom="25dp"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>